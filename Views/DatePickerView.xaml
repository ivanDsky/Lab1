<UserControl x:Class="Lab1.Views.DatePickerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab1.Views"
             mc:Ignorable="d" 
             Background="AliceBlue"
             d:DesignHeight="450" d:DesignWidth="783.456">
    <Grid>
        <DatePicker x:Name="datePicker" Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"  SelectedDateChanged="datePicker_SelectedDateChanged"/>
        <TextBox x:Name="textBox" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
        Text="{Binding Path=PersonAge, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,40,0,0"/>
    </Grid>
</UserControl>
